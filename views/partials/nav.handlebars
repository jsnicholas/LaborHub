<header class="navbar">
  <nav class="navbar-section">
    <h1 class="site-header">LaborHub</h1>
    {{! Mobile view Nav }}
    <div class="dropdown show-md">
      <a href="#" class="btn btn-link dropdown-toggle" tabindex="0">
        {{! Dropdown menu text can go here }}
        <i class="icon icon-menu"></i>
      </a>
      {{! Menu links  }}
      <ul class="menu">
        <a href="/" class="btn btn-link">HOME</a>
        <a href="/dashboard" class="btn btn-link">DASHBOARD</a>
        <a href="/pay" class="btn btn-link">PAY DUES</a>
        {{#if loggedIn}}
          <a href="/logout" class="btn btn-link">LOGOUT</a>
        {{else}}
          <a href="/login" class="btn btn-link">LOGIN</a>
        {{/if}}
      </ul>
    </div>

    {{! Desktop View Nav   }}
    <div class="hide-md desktop-navigation-list">
      <span><img
          src="./icons/home.svg"
          alt="home icon"
          height="20"
          width="20"
        />
        <a href="/" class="text-light">HOME</a></span>
      <span><img
          src="./icons/dashboard.svg"
          alt="dashboard icon"
          height="20"
          width="20"
        /><a href="/dashboard" class="text-light">DASHBOARD</a></span>
      <span>
        <img
          src="./icons/dollar-sign-solid.svg"
          alt="payment icon"
          height="20"
          width="20"
        />
        <a href="/pay" class="text-light">PAY DUES</a></span>
      {{#if loggedIn}}
        <span><img
            src="./icons/logout.svg"
            alt="logout icon"
            height="20"
            width="20"
          /><a href="/logout" class="text-light">LOGOUT</a></span>
      {{else}}
        <span><img
            src="./icons/logout.svg"
            alt="login icon"
            height="20"
            width="20"
          /><a href="/login" class="text-light">LOGIN</a></span>
      {{/if}}
    </div>
  </nav>
</header>