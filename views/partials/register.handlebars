<div class="form-group add-margin">
    <h2 class="text-center">Register below:</h2>
    <form action="/register" method="POST">

        <!--LOGIN EMAIL AND PASSWORD-->
        <div class="card registercard"> <!--CARD START-->
            <div class="card-header"> <!--CARD HEADER START-->
                <div class="card-title h5">Create Username and Password</div>
            </div> <!--CARD HEADER END-->
            <div class="accordion accCard"> <!--ACCORDION START-->
                <input type="checkbox" id="accordion-1" name="accordion-checkbox" hidden> <!--ACCORDION ARROW START-->
                <label class="accordion-header" for="accordion-1">
                    <i class="icon icon-arrow-right mr-1"></i>
                </label> <!--ACCORDION ARROW END-->
                <div class="accordion-body"> <!--ACCORDION BODY START-->
                    <div class="card-body"> <!--CARD BODY START-->
                        <!--usr_name
                        <label class="form-label form-inline" for="usr_name">Username:</label>
                        <input class="form-input form-inline" type="text" id="usr_name" name="usr_name" />-->
                        <!--email-->
                        <label class="form-label form-inline" for="email">Login Email for Your Account:</label>
                        <input class="form-input" type="email" id="email" name="email"
                            pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required />
                        <!--password-->
                        <label class="form-label form-inline" for="password">Password:</label>
                        <p class="exampletext text-small">Please have at least one uppercase letter, lowercase letter
                            and number.</p>
                        <input class="form-input" type="password" id="password" name="password"
                            pattern="^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9]).{8,}$" required />
                    </div> <!--CARD BODY END-->
                </div> <!--ACCORDION BODY END-->
            </div> <!--ACCORDION END-->
        </div><!--CARD END-->

        <!--PERSONAL INFORMATION-->
        <div class="card registercard"> <!--CARD START-->
            <div class="card-header"> <!--CARD HEADER START-->
                <div class="card-title h5">Personal Information</div>
            </div> <!--CARD HEADER END-->
            <div class="accordion accCard"> <!--ACCORDION START-->
                <input type="checkbox" id="accordion-2" name="accordion-checkbox" hidden> <!--ACCORDION ARROW START-->
                <label class="accordion-header" for="accordion-2">
                    <i class="icon icon-arrow-right mr-1"></i>
                </label> <!--ACCORDION ARROW END-->
                <div class="accordion-body"> <!--ACCORDION BODY START-->
                    <div class="card-body"> <!--CARD BODY START-->
                        <!--first_name-->
                        <label class="form-label form-inline" for="first_name">First Name:</label>
                        <input class="form-input" type="text" id="first_name" name="first_name" required />
                        <!--last_name-->
                        <label class="form-label form-inline" for="last_name">Last Name:</label>
                        <input class="form-input" type="text" id="last_name" name="last_name" required />
                        <!--email-->
                        <label class="form-label form-inline" for="email">Preferred Contact Email:</label>
                        <p class="exampletext text-small">Can be the same or different email used for you login email.
                        </p>
                        <input class="form-input" type="email" id="preferred-email" name="preferred-email"
                            pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,14}$" required />
                        <!--personal phone-->

                        <label class="form-label form-inline" for="personal_phone">Preferred Contact Phone
                            Number:</label>
                        <p class="exampletext text-small"> Please include Area Code. Example: Write 8035764434 instead of 803-576-4434.</p>
                        <input class="form-input" type="number" id="personal_phone" name="personal_phone" required minlength="10" maxlength="10"/>
                        <!--address 1 allow null--> <!--address 2 allow null-->
                        <label class="form-label form-inline" for="address1">Home Address (Not Required):</label>

                        <input class="form-input" type="text" id="address1" name="address1"
                            placeholder="123 Main St...">
                        <input class="form-input" type="text" id="address2" name="address2"
                            placeholder="Apt/Bldg/Unit Number...">
                        <!--city allow null-->
                        <label class="form-label form-inline" for="city">City (Not Required):</label>
                        <input class="form-input" type="text" id="city" name="city" placeholder="Atlanta">
                        <!--state allow null-->
                        <label class="form-label form-inline" for="state">Select U.S. State or Territory from the
                            List (Not Required):</label>
                        <select class="form-select" id="state" name="state">
                            <option>Choose an option</option>
                            {{#each statesArr as | state |}}
                            <option>{{state}}</option>
                            {{/each}}
                        </select>
                        <!--zip allow null-->
                        <label class="form-label form-inline" for="zip">Zip Code (Not Required):</label>
                        <input class="form-input" type="number" id="zip" name="zip" minlength="5" maxlength="5"/>
                    </div> <!--CARD BODY END-->
                </div> <!--ACCORDION BODY END-->
            </div> <!--ACCORDION END-->
        </div><!--CARD END-->

        <!--GENDER, SEXUALITY, ETHNICITY-->
        <div class="card registercard"> <!--CARD START-->
            <div class="card-header"> <!--CARD HEADER START-->
                <div class="card-title h5">Gender, Sexuality and Ethnicity</div>
            </div> <!--CARD HEADER END-->
            <div class="accordion accCard"> <!--ACCORDION START-->
                <input type="checkbox" id="accordion-3" name="accordion-checkbox" hidden> <!--ACCORDION ARROW START-->
                <label class="accordion-header" for="accordion-3">
                    <i class="icon icon-arrow-right mr-1"></i>
                </label> <!--ACCORDION ARROW END-->
                <div class="accordion-body"> <!--ACCORDION BODY START-->
                    <div class="card-body"> <!--CARD BODY START-->
                        <!--sex allow null-->
                        <p class="labeltext">Gender Identity (Not Required):</p>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sex" value="Cis Female">
                            <i class="form-icon"></i> Cis Female
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sex" value="Cis Male">
                            <i class="form-icon"></i> Cis Male
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sex" value="Non-Binary">
                            <i class="form-icon"></i> Non-Binary
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sex" value="Trans Female">
                            <i class="form-icon"></i> Trans Female
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sex" value="Trans Male">
                            <i class="form-icon"></i> Trans Male
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sex" value="Other">
                            <i class="form-icon"></i> Other
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sex" value="Prefer to Not Identify">
                            <i class="form-icon"></i> Prefer to Not Identify
                        </label>
                        <!--sexual_orientation allow null-->
                        <p class="labeltext">Sexual Orientation (Not Required):</p>
                        <label class="form-radio">
                            <input type="radio" class="formcheckbox" name="sexual_orientation" value="Asexual">
                            <i class="form-icon"></i> Asexual
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sexual_orientation" value="Bisexual">
                            <i class="form-icon"></i> Bisexual
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sexual_orientation" value="Gay">
                            <i class="form-icon"></i> Gay
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sexual_orientation" value="Heterosexual">
                            <i class="form-icon"></i> Heterosexual
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sexual_orientation" value="Lesbian">
                            <i class="form-icon"></i> Lesbian
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formcheckbox" name="sexual_orientation" value="Pansexual">
                            <i class="form-icon"></i> Pansexual
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sexual_orientation" value="Other">
                            <i class="form-icon"></i> Other
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="sexual_orientation" value="Prefer to Not Identify">
                            <i class="form-icon"></i> Prefer to Not Identify
                        </label>
                        <!--ethnicity-->
                        <p class="labeltext">Ethnicity (Please select the one that best applies.):
                        </p>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="ethnicity" onclick="ifCheckedVal()" value="American Indian or Alaskan Native">
                            <i class="form-icon"></i> American Indian or Alaskan Native
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="ethnicity" onclick="ifCheckedVal()" value="Asian">
                            <i class="form-icon"></i> Asian
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="ethnicity" onclick="ifCheckedVal()" value="Black or African American">
                            <i class="form-icon"></i> Black or African American
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="ethnicity" onclick="ifCheckedVal()" value="Hispanic">
                            <i class="form-icon"></i> Hispanic or Latinx
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="ethnicity" onclick="ifCheckedVal()" value="Middle Eastern or North African">
                            <i class="form-icon"></i> Middle Eastern or North African
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="ethnicity" onclick="ifCheckedVal()" value="Native Hawaiian or Other Pacific Islander">
                            <i class="form-icon"></i> Native Hawaiian or Other Pacific Islander
                        </label>
                        <label class="form-radio">
                            <input type="radio" class="formradio" name="ethnicity" onclick="ifCheckedVal()" value="White or Caucasian">
                            <i class="form-icon"></i> White or Caucasian
                        </label>
                        <label class="form-radio">
                            <input type="checkbox" class="formradio" name="ethnicity" onclick="ifCheckedVal()" value="Other">
                            <i class="form-icon"></i> Other
                        </label>
                    </div> <!--CARD BODY END-->
                </div> <!--ACCORDION BODY END-->
            </div> <!--ACCORDION END-->
        </div><!--CARD END-->

        <!--EMPLOYEE INFORMATION-->
        <div class="card registercard"> <!--CARD START-->
            <div class="card-header"> <!--CARD HEADER START-->
                <div class="card-title h5">Employee Information</div>
            </div> <!--CARD HEADER END-->
            <div class="accordion accCard"> <!--ACCORDION START-->
                <input type="checkbox" id="accordion-4" name="accordion-checkbox" hidden> <!--ACCORDION ARROW START-->
                <label class="accordion-header" for="accordion-4">
                    <i class="icon icon-arrow-right mr-1"></i>
                </label> <!--ACCORDION ARROW END-->
                <div class="accordion-body"> <!--ACCORDION BODY START-->
                    <div class="card-body"> <!--CARD BODY START-->
                        <!--hire date-->
                        <label class="form-label form-inline" for="hire_date">Date of Hire:</label>
                        <input class="form-input" type="date" id="hire_date" name="hire_date" required />
                        <!--position-->
                        <label class="form-label form-inline" for="position">Position:</label>
                        <input class="form-input" type="text" id="position" name="position" required />
                        <!--title-->
                        <label class="form-label form-inline" for="title">Title:</label>

                        <input class="form-input" type="text" id="title" name="title" required />
                        <!--work phone allow null-->
                        <label class="form-label form-inline" for="work_phone">Work Phone Number (Not Required):</label>
                        <p class="exampletext text-small"> Please include Area Code. Example: Write 8035764434 instead of 803-576-4434.</p>
                        <input class="form-input" type="number" id="work_phone" name="work_phone" minlength="10" maxlength="10"/>
                        <!--work phone ext allow null-->
                        <label class="form-label form-inline" for="work_phoneext">Work Phone
                            Extension (Not Required):</label>
                        <p class="exampletext text-small"> Example: Write 5555 instead of Ext5555.</p>
                        <input class="form-input" type="number" id="work_phoneext" name="work_phoneext" />
                        <!--base rate-->
                        <label class="form-label form-inline" for="base_rate">Base Rate: </label>
                        <p class="exampletext text-small">Example: Write "23" instead of "$23/hour"</p>
                        <input class="form-input" type="number" id="base_rate" name="base_rate" required />
                        <!--annual salary-->
                        <label class="form-label form-inline" for="annual_salary">Annual Salary: </label>
                        <p class="exampletext text-small">Example: Write "40000" instead of "$40,000/year"</p>
                        <input class="form-input" type="number" id="annual_salary" name="annual_salary" required />
                    </div> <!--CARD BODY END-->
                </div> <!--ACCORDION BODY END-->
            </div> <!--ACCORDION END-->
        </div><!--CARD END-->

        <!--SUBMIT BUTTON-->
        <a href="/login">
            <button class="submit btn" type="submit">Submit Registration</button>
        </a>
    </form>
</div>
<!--LINK checkbox.js-->
<script src="/js/checkbox.js"></script>